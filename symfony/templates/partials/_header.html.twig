<header>
  <!-- Connexion page -->
  <nav class="header_navigation">
    <ul>
      {% if user %}
        <li><p class="user_label">{{ user.email }}</p></li>
        {% if user.roles[0] == 'ROLE_ADMIN' %}
          <li><a class="link" href="{{ path('app_admin') }}">Espace administrateur</a></li>
        {% endif %}
        <li><a class="link" href="{{ path('app_logout') }}">Se d√©connecter</a></li>
        {% else %}
        <li><a class="link" href="{{ path('app_login') }}">Se connecter</a></li>
      {% endif %}
    </ul>
  </nav>

  
  <!-- Logo and return to home page -->
  <a href="{{ path('app_home') }}">
    <img class="logoGarage" src={{ asset('images/logo/logoGarage.svg')}} alt="Logo du garage de Vincent Parrot"/>
  </a>

  <!-- Navigation to the main sections of the website -->
  <nav class="header_navigation">
    <ul>
      {% for prestation in prestationList %}
        <li><a class="link" href="{{ path('app_show_prestations', {'id': prestation.id}) }}">{{prestation.title}}</a></li>
      {% endfor %}
    </ul>
  </nav>
</header>